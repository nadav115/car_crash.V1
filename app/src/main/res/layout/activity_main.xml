<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="6dp"
                android:text="BOOM"
                android:textSize="40dp" />

            <ImageView
                android:id="@+id/heart1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignTop="@id/heart0"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@id/heart0"
                app:srcCompat="@drawable/img_heart" />

            <ImageView
                android:id="@+id/heart2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignTop="@id/heart0"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@id/heart1"
                app:srcCompat="@drawable/img_heart" />

            <ImageView
                android:id="@+id/heart0"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/img_heart" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/obsticels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/stone00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />
            <ImageView
                android:id="@+id/stone01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />
            <ImageView
                android:id="@+id/stone02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/stone10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />
            <ImageView
                android:id="@+id/stone11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />
            <ImageView
                android:id="@+id/stone12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/stone30"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />
            <ImageView
                android:id="@+id/stone31"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />
            <ImageView
                android:id="@+id/stone32"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_stone"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/car40"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_racing_car"
                />
            <ImageView
                android:id="@+id/car41"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                app:srcCompat="@drawable/img_racing_car"
                />
            <ImageView
                android:id="@+id/car42"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/img_racing_car"
                />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:layout_alignParentBottom="true"
        >

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/btn_left"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/img_left_arrow" />

            <ImageButton
                android:id="@+id/btn_right"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/img_right_arrow" />
        </RelativeLayout>








    </LinearLayout>
</LinearLayout>